#!/bin/bash

case "$1" in
    "whole")
        scrot -e "xclip -selection c -t image/png \$f && mv \$f $2"
        ;;
    "region")
        scrot -s -e "xclip -selection c -t image/png \$f && mv \$f $2"
        ;;
    "window")
        scrot -u -e "xclip -selection c -t image/png \$f && mv \$f $2"
        ;;
    *)
        echo "Usage: $0 {whole|region|window} {output}"
        exit 1
esac
